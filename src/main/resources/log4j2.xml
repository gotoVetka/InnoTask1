<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <Console name="LogConsole"
                 target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name           ="LogFile"
              fileName       ="all.log"
              immediateFlush ="false"
              append         ="false">
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>

    </Appenders>

    <Loggers>
        <Logger name="com.korzh.ft.entity.CustomIntArr" level="debug" additivity="false">
            <AppenderRef ref="LogConsole"/>
            <AppenderRef ref="LogFile"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="LogConsole"/>
            <AppenderRef ref="LogFile"/>
        </Root>
        <Root level="debug">
            <AppenderRef ref="LogConsole"/>
            <AppenderRef ref="LogFile"/>
        </Root>
    </Loggers>
</Configuration>